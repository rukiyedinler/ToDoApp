<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Tasks</title>
    <partial name="_Loginpartial"></partial>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ToDo.style.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <style>
            .bg-purple {
                background-color: purple;
            }
            .custom-header {
                font-size: 20px; /* İstediğiniz boyutu belirtin */
                color: #ffffff; /* İstediğiniz renk kodunu belirtin */
            }
        </style>
        <header class="bg-purple text-white text-center">
            <hl class="m-3 p-3 custom-header">My Tasks</hl>
        </header>
        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
